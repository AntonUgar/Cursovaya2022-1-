@model CurierLib.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменить</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameTovar" class="control-label"></label>
                <input asp-for="NameTovar" class="form-control" />
                <span asp-validation-for="NameTovar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceOne" class="control-label"></label>
                <input asp-for="PriceOne" class="form-control" />
                <span asp-validation-for="PriceOne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" style=" display:none" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
